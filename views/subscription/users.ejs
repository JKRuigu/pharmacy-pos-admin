<%- include('../partials/header.ejs', {title: "Subscription status"});%>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.21.0/moment.min.js"></script>
<div class="panel-header panel-header-sm">
  <div class="header text-center">
    <h3 class="title">Your subscription status</h3>
  </div>
</div>
<div class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h5 class="title">
            <i class="now-ui-icons users_single-02"></i>
            <span class="text-right">
              <% if (user.facebook.name) { %>
              <%=user.facebook.name %>
              <% } %>
              <% if (user.google.email) { %>
              <%=user.google.email %>
              <% } %>
              <% if (user.local.username) { %>
              <%=user.local.username %>
              <% } %>
          </span></h5>
          <div class="container" >
            <h4>Your subscriptions</h4>
            <table class="table table-bordered table-hover table-striped">
              <thead>
              <tr>
                <th>ID #</th>
                <th>Package</th>
                <th>Amount</th>
                <th>Activation Date</th>
                <th>Expiry Date</th>
                <th>Days remaining</th>
                <th>Status</th>
              </tr>
              </thead>
              <tbody id="subscriptionsTable">
              <tr>
                <td>1</td>
                <td>3 Months</td>
                <td>Ksh.50,000</td>
                <td>01/01/2017</td>
                <td>01/03/2017</td>
                <td>45</td>
                <td><i class="now-ui-icons ui-1_check text-danger"></i></td>
              </tr>
              <tr>
                <td>2</td>
                <td>6 Months</td>
                <td>Ksh.100,000</td>
                <td>01/04/2017</td>
                <td>01/09/2017</td>
                <td>120</td>
                <td><i class="now-ui-icons ui-1_simple-remove text-success"></i></td>
              </tr>
              <tr>
                <td>3</td>
                <td>2 Years</td>
                <td>Ksh.250,000</td>
                <td>01/01/2018</td>
                <td>01/03/2020</td>
                <td>270</td>
                <td><i class="now-ui-icons ui-1_simple-remove"></i></td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
