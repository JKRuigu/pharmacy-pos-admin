    });
    </script>
<script type="text/javascript">
$(document).ready(function () {
  $('#edit-details').on('submit',function (e) {
    e.preventDefault();
    var email = $('#email').val();
    $.ajax( {
      url:'https://api.mlab.com/api/1/databases/pharmacy-pos/collections/users?apiKey=dI9gXrgAznHkTgvdNOqCp_WKAwZD2KON&q="user._id"',
      data: JSON.stringify({
         "email" :email,
     }),
      type: "POST",
      contentType: "application/json",
      success:function (data,msg) {
          window.location.href="contact",
          alert( msg)

      },
