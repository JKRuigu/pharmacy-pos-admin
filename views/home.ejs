<!DOCTYPE html>
<html>
<head>
    <title>Pharmacy-pos</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
          integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Pacifico|Open+Sans:400,300,700' rel='stylesheet'
          type='text/css'>
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet"
          id="bootstrap-css">
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="/node/css/modal.css">
    <link rel="stylesheet" href="/node/css/modalreset.css">
    <!-- Start of HubSpot Embed Code -->
     <script type="text/javascript" id="hs-script-loader" async defer src="//js.hs-scripts.com/4402366.js"></script>
    <!-- End of HubSpot Embed Code -->
    <style media="screen">
    .swal-text {
        text-align: center;
        padding: 17px;
        display: block;
        margin: 22px;
        color: #61534e;
        }
    </style>
</head>
<body id="mainBody">
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h3 id="login-header">Register to Download  </h3>
            <h3 id="login-header2">Login to access your Account </h3>
        </div>
        <br><br><br>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">

                <div class="panel-heading">
                    <div class="row">

                        <div class="col-xs-6">
                            <a href="#" class="active" id="register-form-link">Register</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="#" id="login-form-link">Login</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="login-form" method="post" role="form" style="display: none;">
                                <div class="form-group">
                                    <input type="email" name="email" id="username" class="form-control"
                                           placeholder="Enter your E-mail" value="">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" id="login-pass" class="form-control"
                                           placeholder="Password" value="">
                                </div>
                                <div class="form-group text-center">
                                    <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                    <label for="remember"> Remember Me</label>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="login-submit" class="form-control btn btn-login"
                                                   value="Log In">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="text-center">
                                              <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">Forgot Password ?</button>
                                              </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <form id="register-form" method="post" role="form" style="display:block;">
                                <div class="form-group">
                                    <input type="tel" name="tel" id="tel" class="form-control"
                                           placeholder="Mobile Number" minlength=10 maxlength=14>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="username2" id="username2" tabindex="1" class="form-control"
                                           placeholder="Enter your username" >
                                </div>
                                <div class="form-group">
                                    <input type="email" name="email" id="email" class="form-control"
                                           placeholder="Email Address" >
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" id="password" class="form-control"
                                           placeholder="Password" minlength=5>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password2" id="password2" class="form-control"
                                           placeholder="Confirm Password" minlength=5>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <button type="submit" role="button" class="form-control btn btn-register">
                                                Register Now
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Reset Password</h3>
            </div>
            <form method="post" class="form" id="forgot-form">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" id="email-forgot" name="email" class="form-control" placeholder="Enter your email here ...">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" id="passReset">Reset</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/0.5.0/sweet-alert.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js"></script>
<script src="/node/js/main.js"></script>
<script>
    $(document).ready(function () {
        $('#register-form').on('submit', function (e) {
            e.preventDefault();
            var username = $('#username2').val();
            var email = $('#email').val();
            var tel = $('#tel').val();
            var password = $('#password').val();
            var password2 = $('#password2').val();

            if (!email || !password || !tel || !password2 || !username>5) {
                swal({
                    title: "Error!",
                    text: "All fields are required",
                    icon: "info",
                });
            }else if (password !== password2 ) {
                swal({
                    title: "Error!",
                    text: "Your passwords do not match! Please try again",
                    icon: "info",
                });
            } else {
                $.ajax({
                    url: "/users/profile/register",
                    data: JSON.stringify({
                        "username": username,
                        "tel": tel,
                        "email": email,
                        "password": password,
                        "password2": password2
                    }),
                    type: "POST",
                    contentType: "application/json",
                    success: function (data, msg) {
                        if (data) {
                            $("#register-form").get(0).reset();
                            swal({
                                title: "Registration successful!",
                                text: 'You can now login with your email and password provided on the login tab to Download the Software.' ,
                                icon: "success"
                            }).then(function () {
                              window.location = '/users/profile';
                            });
                        }
                    },
                    error: function (xhr) {
                        if (xhr.status === 404) {
                            var error = xhr.responseJSON;
                            swal({
                                title: "Error!",
                                text: error.message,
                                icon: "error"
                            });
                        }
                    }
                });
            }
        });
    });
    $('#login-form').submit(function (e) {
      e.preventDefault();
      var email = $('#username').val();
      var password = $('#login-pass').val();
      if (!email || !password) {
        swal({
          title: "Error!",
          text: "Email and password are required !",
          icon: "info",
        });
      }else {
        $.ajax({
            url: "/users/profile/login",
            data: JSON.stringify({
            "email": email,
            "password": password
          }),
            type: "POST",
            contentType: "application/json",
            success: function (data) {
            if (data) {
              if(data.isAdmin)
                window.location = '/admin/';
              else
                window.location = '/users/profile';
            }
          },
          error: function (xhr) {
            var message = xhr.responseJSON.message;
            if (xhr.status === 404) {
              swal({
                title: "Error!",
                text: message,
                icon: "error"
              });
            }
          }
        });
      }
    });
    $(document).ready(function () {
        $('#forgot-form').on('submit', function (e) {
            e.preventDefault();
            var email = $('#email-forgot').val();
            if (!email) {
              swal({
                title: "Error!",
                text: 'Please Enter your E-mail' ,
                icon: "info"
              });
            }else {
              $("#passReset").text("Processing....");
              $.ajax({
                url: "/users/forgot",
                data: JSON.stringify({
                  "email": email
                }),
                type: "post",
                contentType: "application/json",
                success: function (data, msg) {
                  if (data) {
                    $("#forgot-form").get(0).reset();
                    $("#passReset").text("Process completed successful!");
                    swal({
                      title: "Success",
                      text: 'A message was sent to the e-mail you provided. Please login to that e-mail for more information on how to reset your password.' ,
                      icon: "success"
                    }).then(function () {
                      $('#exampleModal').modal('hide');
                    });
                  }
                },
                error: function (xhr) {
                  if (xhr.status === 404) {
                    var error = xhr.responseJSON;
                    swal({
                      title: "Error!",
                      text: error.message,
                      icon: "info"
                    });
                  }
                }
              });
            }
        });
    });

</script>
</body>
</html>
