<body id="mainBody">
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h3 id="login-header">Register to Download  </h3>
            <h3 id="login-header2">Login to access your Account </h3>
        </div>
        <br><br><br>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">

                        <div class="col-xs-6">
                            <a href="#" class="active" id="register-form-link">Register</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="#" id="login-form-link">Login</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="register-form" action="/users/profile/register" method="post" role="form" style="display:block;">
                                <div class="form-group">
                                    <input type="text" name="tel" id="tel" class="form-control"
                                           placeholder="Mobile Number" required minlength='10' maxlength='14'>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="username" id="username2" required class="form-control"
                                           placeholder="Enter your username" >
                                </div>
                                <div class="form-group">
                                    <input type="email" name="email" id="email" required class="form-control"
                                           placeholder="Email Address" >
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" id="password" required class="form-control"
                                           placeholder="Password" minlength=5>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password2" id="password2" required class="form-control"
                                           placeholder="Confirm Password" minlength=5>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <button type="submit" role="button" class="form-control btn btn-register">
                                                Register Now
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <form id="login-form" method="post" action="/users/profile/login" role="form" style="display: none;">
                                <div class="form-group">
                                    <input type="email" name="email" id="username" required class="form-control"
                                           placeholder="Enter your E-mail" value="">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" id="login-pass" required class="form-control"
                                           placeholder="Password" value="">
                                </div>
                                <div class="form-group text-center">
                                    <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                    <label for="remember"> Remember Me</label>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="login-submit" class="form-control btn btn-login"
                                                   value="Log In" >
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="text-center">
                                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#passwordRestModal">Forgot Password ?</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="passwordRestModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Reset Password</h3>
            </div>
            <form method="post" class="form" id="forgot-form">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" id="email-forgot" name="email" class="form-control" placeholder="Enter your email here ...">
                    </div>
                </div>
                <div class="modal-footer">
                    <span class="btn btn-success" style="display:none" id="passwordSuccess">Success ! An e-mail was sent to the Email your have provided</span> <br><br>
                    <span class="btn btn-info" style="display:none" id="passwordInfo">Please enter an email</span> <br><br>
                    <button type="submit" class="btn btn-success" id="passReset">Reset</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/0.5.0/sweet-alert.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js"></script>
<script src="/node/js/main.js"></script>
<script>
    var message = <%- JSON.stringify(message)%>
    if(message.length > 0){
      swal({
        type: 'info',
        icon: 'info',
        title: 'Error',
        text: message[0]
      })
    }
    $(document).ready(function () {
        $('#forgot-form').on('submit', function (e) {
            e.preventDefault();
            var email = $('#email-forgot').val();
            if (!email) {
              $('#passwordSuccess').css({'display':'none'});
              $('#passwordInfo').css({'display':'block'});
            }else {
              $('#passwordInfo').css({'display':'none'});
              $("#passReset").text("Processing....");
              $.ajax({
                url: "/users/forgot",
                data: JSON.stringify({
                  "email": email
                }),
                type: "post",
                contentType: "application/json",
                success: function (data, msg) {
                  if (data) {
                    $("#forgot-form").get(0).reset();
                    $('#passwordSuccess').css({'display':'block'});
                    $("#passReset").text("Reset");
                    swal({
                      title: "Success",
                      text: 'A message was sent to the e-mail you provided. Please login to that e-mail for more information on how to reset your password.' ,
                      icon: "success"
                    }).then(function () {
                      $('#passwordRestModal').modal('hide');
                    });
                  }
                },
                error: function (xhr) {
                  if (xhr.status === 404) {
                    var error = xhr.responseJSON;
                    $('#passwordSuccess').css({'display':'none'});
                    $("#passReset").text(error.message);
                    $("#forgot-form").get(0).reset();
                  }
                }
              });
            }
        });
    });

</script>
</body>
</html>
