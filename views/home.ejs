										<i class="fa fa-phone login-field-icon"></i><br>
								  </div>
								  <div class="form-group">
									<input type="email"  name="email" id="email"  value="ruigukjohn@gmail.com" class="form-control"  aria-describedby="emailHelp" placeholder="Enter your Email">
										<i class="fa fa-envelope login-field-icon"></i><br>
								  </div>
								  <div class="form-group">
									<input type="password" class="form-control" value="1234" placeholder="Enter your Password" name="password" id="password" >
										<i class="fa fa-lock login-field-icon"></i><br>
								  </div>
								  <div class="form-group">
									<input type="password" class="form-control" value="1234" placeholder="Confirm your Password" name="password2" id="password2" >
										<i class="fa fa-lock login-field-icon"></i><br>
