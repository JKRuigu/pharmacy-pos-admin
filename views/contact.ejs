<%- include('./partials/header.ejs', {title: "contact"});%>
            <div class="panel-header panel-header-sm">
            </div>
            <div class="content">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="title">Send Us a Direct Message Here</h5>
                            </div>
                            <div class="card-body">
                              <div class="panel-body">
                                      <form id="add-message">
                                        <div class="form-group">
                                          <label>Name</label>
                                          <input type="text" id="name" class="form-control" value="<%=user.facebook.name %>">
                                        </div>
                                        <div class="form-group">
                                          <label>Email</label>
                                          <input type="email" id="email" class="form-control" >
                                        </div>
                                        <div class="form-group">
                                          <label>Phone Number</label>
                                          <input type="tel" id="tel" class="form-control">
                                        </div>
                                        <div class="form-group">
                                          <label>Message</label>
                                          <input type="text" id="message" class="form-control">
                                        </div>
                                        <input type="submit" name="submit" value="SUBMIT" class="btn btn-primary">
                                      </form>
                              </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card card-user">
                            <div class="image">
                                <img src="../assets/img//bg5.jpg" alt="...">
                            </div>
                            <div class="card-body">
                                <div class="author">
                                        <img class="avatar border-gray" src="../assets/img/mike.jpg" alt="...">
                                        <h6 class="title">
                                        <p class="description">
                                    </p>
                                </div>
                                <p class="description text-center">
                                  We promise to get intouch within 24 Hours
                                </p>
                            </div>
                            <hr>
                            <div class="button-container">
                              <a href="/connect/google" class="btn btn-danger">Share your email with Us</a>
                                   <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                                   <i class="fab fa-facebook-f"></i>
                               </button>
                               <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                                   <i class="fab fa-twitter"></i>
                               </button>
                               <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg">
                                   <i class="fab fa-google-plus-g"></i>
                               </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" ></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" ></script>
    <script src="/js/contact.js" ></script>
<%- include('./partials/footer.ejs')%>
